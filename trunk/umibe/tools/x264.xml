<?xml version="1.0" encoding="ISO-8859-1"?>
<Tool>
    <Name>x264.exe</Name>
	<Type>video</Type>
    <Path>./resources/x264.exe</Path>
	<Modes> 
		<Mode name="CRF" steps="1">
			<ExecutionChain> 
				<ExecutionStep1>REPLACEEXECUTABLE REPLACEOPTIONS --output REPLACEOUTPUT REPLACEINPUT</ExecutionStep1>
			</ExecutionChain>
		</Mode>
		<Mode name="CQ" steps="1">
			<ExecutionChain> 
				<ExecutionStep1>REPLACEEXECUTABLE REPLACEOPTIONS --output REPLACEOUTPUT REPLACEINPUT</ExecutionStep1>
			</ExecutionChain>
		</Mode>
		<Mode name="2P" steps="2">
			<ExecutionChain> 
				<ExecutionStep1>REPLACEEXECUTABLE --pass 1 --stats REPLACESTATS REPLACEOPTIONS --output NUL REPLACEINPUT</ExecutionStep1>
				<ExecutionStep2>REPLACEEXECUTABLE --pass 2 --stats REPLACESTATS REPLACEOPTIONS --output REPLACEOUTPUT REPLACEINPUT</ExecutionStep2>
			</ExecutionChain>
		</Mode>
	</Modes>
	<Options>
		<Option name="Constant Rate Factor" key="--crf" value="20.5" modes="CRF" mandatory="true" advanced="false"/>
		<Option name="Constant Quantizer" key="--cq" value="20.5" modes="CQ" mandatory="true" advanced="false"/>
		<Option name="Number of Reference Frames" key="--ref" value="16" modes="ALL" mandatory="false" advanced="false"/>
		<Option name="Mixed Reference Frames" key="--mixed-refs" value="null" modes="ALL" mandatory="false" advanced="false"/>
		<Option name="Number of B-Frames" key="--bframes" value="16" modes="ALL" mandatory="false" advanced="false"/>
		<Option name="B-Pyramid" key="--b-pyramid" value="null" modes="ALL" mandatory="false" advanced="false"/>
		<Option name="Weighted B-Prediction" key="--weightb" value="null" modes="ALL" mandatory="false" advanced="false"/>
		<Option name="Deblocking" key="--deblock" value="-2 -1" modes="ALL" mandatory="false" advanced="false"/>
		<Option name="Subpixel Refinement" key="--subme" value="8" modes="ALL" mandatory="false" advanced="false"/>
		<Option name="Trellis Quantization" key="--trellis" value="2" modes="ALL" mandatory="false" advanced="false"/>
		<Option name="Psy-RD - Psy-Trellis" key="--psy-rd" value="0.6:0" modes="ALL" mandatory="false" advanced="false"/>
		<Option name="Partitions" key="--partitions" value="p8x8,b8x8,i4x4,i8x8" modes="ALL" mandatory="false" advanced="false"/>
		<Option name="Adaptive 8x8 DCT" key="--8x8dct" value="null" modes="ALL" mandatory="false" advanced="false"/>
		<Option name="B-Frame bias" key="--b-bias" value="40" modes="ALL" mandatory="false" advanced="false"/>
		<Option name="Motion Estimation Algorithm" key="--me" value="umh" modes="ALL" mandatory="false" advanced="false"/>
		<Option name="Number of threads" key="--threads" value="auto" modes="ALL" mandatory="false" advanced="false"/>
		<Option name="Thead Input" key="--thread-input" value="null" modes="ALL" mandatory="false" advanced="false"/>
		<Option name="Adaptive Quantization Strength" key="--aq-strength" value="0.5" modes="ALL" mandatory="false" advanced="false"/>
		<Option name="Output Progress" key="--progress" value="null" modes="ALL" mandatory="false" advanced="false"/>
		<Option name="Bitrate" key="--bitrate" value="450" modes="2P,3P" mandatory="true" advanced="false"/>
		<Option name="B-Frame mode" key="--direct" value="auto" modes="ALL" mandatory="false" advanced="false"/>
		<Option name="SAR" key="--sar" value="1:1" modes="ALL" mandatory="false" advanced="false"/>
	</Options>
</Tool>